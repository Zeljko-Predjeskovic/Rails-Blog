	<h2>Log In</h2>
	<%= form_tag "/login" do %>
	<div class="margin-15">
		<label>Username:</label> 
	</div>	
	<div class="margin-15">	
		<%= text_field_tag :name %>
	</div>	
	<div class="margin-15">
		<label>Password: </label> 
	</div>	
	<div class="margin-15">
		<%= password_field_tag :password %>
	</div>	
		<%= submit_tag "Log in" %>
	<% end %>