<h1>Articles</h1>


Our blog has <%= Article.public_count %> articles and counting!

<ul>
	<% @articles.each do |article| %>
	<% if current_user %>
		<% unless article.archived? %>
		<li>
			<%= link_to article.title, user_article_path(article.user_id, article) %>
		</li>
		<% end %>
	<% else %>
		<li>
			<%= article.title%>
		</li>	
	<% end %>
	<% end %>
</ul>

<% if current_user %>
	<%= link_to "create" , new_user_article_path(current_user) %>
<% end %>