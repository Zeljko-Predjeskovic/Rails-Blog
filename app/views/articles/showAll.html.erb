<div class="flex-column text-pos-center">
	<h1>Articles</h1>

	<div class="text-pos-center">
		<p>Our blog has <%= Article.public_count %> articles and counting!</p>
	</div>

		<% @articles.each do |article| %>
			<% unless article.archived? %>
			<div class="margin-lr margin-30 curved-borders-con">
				<div class="margin-5">
					<h3>
						<%= link_to article.title, user_article_path(article.user_id, article) %>
					</h3>
				</div>
				<div class="margin-15">
					<%= article.body[0,60] + "..."%>
				</div>
			</div>
			<% end %>

		<% end %>


	<div class="margin-15">
		<% if current_user %>
			<%= link_to "create" , new_user_article_path(current_user) , class: "p-button color-bright bg-color-dark"%>
		<% end %>
	</div>
</div>