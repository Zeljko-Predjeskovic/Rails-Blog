<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>

<% if current_user %>
  <nav class="navbar gap-10 bg-color-dark">
    <div class="navItem">
      <%= link_to "Profile", user_path(current_user), 
      class: "a-text color-bright" %>
    </div>
    <div class="navItem">
      <%= link_to "Articles", 
      articles_showAll_path, 
      class: "a-text color-bright" %>
    </div>
    <div class="navItem">
      <%= link_to "Logout", 
      logout_path, 
      class: "a-text color-bright" %>
    </div>    
  </nav>

<% else %>
  <nav class="navbar gap-10 bg-color-dark">
    <div class="navItem">
      <%= link_to "Login", login_path, 
      class: "a-text color-bright" %>
    </div>
    <div class="navItem">
      <%= link_to "Articles", 
      articles_showAll_path, method: :post, data: { turbo_confirm: 'Are you sure you want to logout?' },
      class: "a-text color-bright" %>
    </div>
  </nav>

<% end %>

    <div class="text-pos-center ">
        <%= yield %>
    </div>

  </body>
</html>
