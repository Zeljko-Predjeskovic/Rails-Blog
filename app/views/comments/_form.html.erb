<div>
  <%= form_with model: [ @article, @article.comments.build ], url: user_article_comments_path(current_user.id, @article.id) do |form| %>

      <%= form.text_field :commenter, value: current_user.name, readonly: true , hidden: true %>

    <p>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.label :status %><br>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>